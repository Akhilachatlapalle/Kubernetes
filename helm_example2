
apiVersion: v1
kind: ReplicationController
metadata:
  name: sc
spec:
  template:
    metadata:
     labels:
        app: Someapp
     annotations:
        additional_networks: "net1, net2, net3"
        network_args_net1: ifname=eth1
        network_args_net2: ifname=eth2
        network_args_net3: ifname=eth3
        flavor: Something  
     spec:
      nodeSelector:
        hostname: "compute1"
      containers:
       - name: sc
         image: busybox  
        # args:
        #- sleep
        #- "1000000"    
        #command: ["/bin/sh"]
        #args: ["-c", "while true; do echo Hello Kubernetes!; sleep 10000000000; done"]
         #resources:
          #requests:
           #memory: 4Gi
           #cpu: 2
          #limits:
           #memory: 4Gi
           #cpu: 2  
         env:
          - name: env_var_name1
            value: Something
          - name: env_var_name2
            value: Something
         volumeMounts:
         - mountPath: /something
           name: sc_volume
         volumeMounts:
         - mountPath: /something
           name: nfs
      volumes:
      - name: sc_volume
        hostPath:
          path: /Something
      - name: nfs
          nfs:
            server: something
            path: "/something"

     
